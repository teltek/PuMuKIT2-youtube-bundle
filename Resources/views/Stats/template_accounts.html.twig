<h3 class="cab_body_div">
    <ul class="breadcrumb" style="margin-bottom: 5px;">
        <li class="active">
            YouTube Accounts
        </li>
    </ul>
</h3>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            {% for account in youtubeAccounts %}
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-yellow">
                            <i class="glyphicon glyphicon-user"></i>
                        </span>
                        <div class="info-box-content">
                            <span class="info-box-text" data-toggle="tooltip" data-placement="bottom" title="{{ account.getTitle() }}">{{ account.getTitle() }}</span>
                            <span class="info-box-number">
                                {% set playlistNumber = account.getChildren()|length %}
                                {{ playlistNumber }}
                                <small>
                                    {% transchoice playlistNumber %}
                                        {0} playlist|{1} playlist|]1,Inf] playlists
                                    {% endtranschoice %}
                                </small>

                                <br />
                                {% set videoNumber = accountsStats[account.getProperty('login')]|length %}
                                {{ videoNumber }}
                                <small>
                                    {% transchoice videoNumber %}
                                        {0} videos|{1} video|]1,Inf] videos
                                    {% endtranschoice %}
                                </small>
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
